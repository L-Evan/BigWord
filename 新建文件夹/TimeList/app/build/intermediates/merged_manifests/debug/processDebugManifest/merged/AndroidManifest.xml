<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.levan.myapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26" />

    <!-- 存储权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 广播 -->
    <!-- <receiver android:name="xxx.xxx.RemindReceiver" /> -->
    <!-- android:theme="@style/AppTheme" -->
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/time"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/time"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.levan.myapplication.User.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.levan.myapplication.MainPageActivity"
            android:label="@string/title_activity_main_page" />
        <activity android:name="com.example.levan.myapplication.User.RegisterActivity" />
        <activity android:name="com.example.levan.myapplication.User.welcomeActivity" />
        <activity android:name="com.example.levan.myapplication.MyInfoActivity" />
        <activity android:name="com.example.levan.myapplication.PutActivity" />
        <!-- 广播 -->
        <receiver
            android:name="com.example.levan.myapplication.Server.RemindReceiver"
            android:permission="" >
            <intent-filter>
                <action android:name="com.Reminder.MyReceiver" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.example.levan.myapplication.Server.MusicsService"
            android:enabled="true"
            android:exported="true"
            android:permission="" />

        <activity android:name="com.example.levan.myapplication.WebActivity" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>